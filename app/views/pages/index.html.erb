<%# add the necessary gmaps javascript files to the head  -%>
<%- add_js_files GMap.header(:host => request.host, :with_vml => false), 'ym4r-gm', 'markerGroup' -%>
<%- add_js_source @map.to_html(:no_script_tag => true) -%>

<h1>Welcome to Cannibook</h1>

<%= @map.div(:width => 960, :height => 212)%>
<p>We think your location is <strong><%= @user_location[:city] %>, <%= @user_location[:state] %></strong></p>

<%- form_tag "/locations/update", :method => "post" do -%>
  <%= label_tag :zipcode, "Enter new zip" %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search" %>
<%- end -%>